# Port for the server (Railway provides this automatically)
PORT=3000

# Optional: Polymarket API key for enhanced access
# POLYMARKET_API_KEY=your_key_here

# Optional: Twitter API credentials
# TWITTER_API_KEY=your_key_here
# TWITTER_API_SECRET=your_secret_here

# Optional: Custom refresh intervals (cron format)
# HOURLY_CRON=0 * * * *
# DAILY_CRON=0 2 * * *

# Optional: 42.space GraphQL endpoint (defaults to public endpoint)
# HASURA_ENDPOINT=https://dev-api.42.space/v1/graphql

# Optional: Node environment
NODE_ENV=production