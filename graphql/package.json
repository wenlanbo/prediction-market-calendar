{
  "name": "prediction-market-calendar-graphql",
  "version": "2.0.0",
  "description": "GraphQL-powered prediction market calendar with Hasura",
  "type": "module",
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "node scripts/migrate-data.js",
    "sync": "tsx scripts/sync-all-sources.ts",
    "hasura:apply": "hasura metadata apply --project hasura",
    "hasura:console": "hasura console --project hasura",
    "test": "jest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app"
  },
  "dependencies": {
    "@apollo/client": "^3.8.0",
    "antd": "^5.13.0",
    "dayjs": "^1.11.10",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "jose": "^5.2.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "redis": "^4.6.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "hasura-cli": "^2.36.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}